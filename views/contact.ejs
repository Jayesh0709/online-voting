                <i data-feather="mail"></i>
            </div>
            <h1>Contact & Support</h1>
            <p>Your connection to secure voting assistance</p>
        </section>

        <section class="contact-container">
            <div class="form-wrapper">
                <h2>Get In Touch</h2>
                <form>
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" class="form-control" id="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    <div class="form-group">
                        <label for="msg">Your Message</label>
                        <textarea class="form-control" id="msg" minlength="20" required></textarea>
                    </div>
                    <button type="submit" class="btn-submit">
                        <i data-feather="send"></i> Send Message
                    </button>
                </form>
            </div>

            <div class="support-card">
                <div class="card-header">
                    <h2><i data-feather="headphones"></i> Support Center</h2>
                </div>
                <div class="card-body">
                    <div class="support-item">
                        <div class="support-icon">
                            <i data-feather="mail" stroke="#138808"></i>
                        </div>
                        <div class="support-content">
                            <h3>Email Support</h3>
                            <a href="mailto:support@evoteindia.in">support@evoteindia.in</a>
                            <p>Typically replies within 24 hours</p>
                        </div>
                    </div>
                    <div class="support-item">
                        <div class="support-icon">
                            <i data-feather="phone" stroke="#000080"></i>
                        </div>
                        <div class="support-content">
                            <h3>Phone Support</h3>
                            <a href="tel:+9118001234567">+91-1800-123-4567</a>
                            <p>Toll-free in India</p>
                        </div>
                    </div>
                    <div class="support-item">
                        <div class="support-icon">
                            <i data-feather="clock" stroke="#FF9933"></i>
                        </div>
                        <div class="support-content">
                            <h3>Office Hours</h3>
                            <p>Monday to Friday<br>9 AM to 6 PM IST</p>
                        </div>
                    </div>
                    <div class="support-item">
                        <div class="support-icon">
                            <i data-feather="map-pin" stroke="#FF9933"></i>
                        </div>
                        <div class="support-content">
                            <h3>Headquarters</h3>
                            <p>Election Commission of India<br>New Delhi 110001</p>
                        </div>
                    </div>
                </div>
